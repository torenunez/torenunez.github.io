source "https://rubygems.org"

# Jekyll 4.x for local development (GitHub Pages uses its own version)
gem "jekyll", "~> 4.3"

group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-seo-tag"
end

# Required for Ruby 3.4+
gem "csv"
gem "base64"
gem "bigdecimal"

# Sass compilation
gem "jekyll-sass-converter", "~> 3.0"

# Web server for local dev
gem "webrick"
